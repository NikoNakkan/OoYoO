<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".host.AddHomeInfoActivity">

    <TextView
        android:id="@+id/house_info_activity_text"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Add the information\nof the place yout hosting at."
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/house_info_activity_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_button_curvy_boy"
        android:layout_marginTop="16dp"
        android:id="@+id/size_in_square_meters_button"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sum in square meters"
            android:textSize="16sp"
            android:layout_marginLeft="32dp"
            android:id="@+id/sum_in_square_meters_textview"/>

        <EditText
            android:id="@+id/sqMeters"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/size_in_square_meters_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_button_curvy_boy"
        android:layout_marginTop="16dp"
        android:id="@+id/i_luv_fat_cats"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Number of rooms"
            android:textSize="16sp"
            android:layout_marginLeft="32dp"
            android:id="@+id/numberof_rooms_tv"/>

        <EditText
            android:id="@+id/numRooms"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:inputType="number"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/i_luv_fat_cats"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_button_curvy_boy"
        android:layout_marginTop="16dp"
        android:id="@+id/floor_of_apartment"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Floor that apartment is at "
            android:textSize="16sp"
            android:layout_marginLeft="32dp"
            android:id="@+id/floor_of_apartment_textview"/>

        <EditText
            android:id="@+id/floor"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:inputType="number"/>



    </RelativeLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/floor_of_apartment"
        android:layout_marginTop="16dp"
        android:id="@+id/home_requir_text_plain"
        android:textStyle="bold"
        android:text="Staying requirements"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Add your requirements"
        android:layout_height="240dp"
        android:layout_below="@id/home_requir_text_plain"
        android:id="@+id/homeSpecificationEditText"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:gravity="start"
        />


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/homeSpecificationEditText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_button_curvy_boy"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/addApartmentPhotos"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Add images"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="32dp"
            android:id="@+id/add_images_of_home"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/finishHostForm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/homeSpecificationEditText"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/orange_curvy_button"
        android:gravity="center"
        android:text="Finish Host Form"
        android:textSize="16sp" />
</RelativeLayout>