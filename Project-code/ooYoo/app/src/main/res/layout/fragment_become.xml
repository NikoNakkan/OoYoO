<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainScreens.BecomeFragment">

    <Button
        android:id="@+id/trip_plan_button"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:text="Travel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/carpooling_button"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:text="Drive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trip_plan_button" />

    <Button
        android:id="@+id/hosting_button"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:text="Host"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carpooling_button" />


</androidx.constraintlayout.widget.ConstraintLayout>