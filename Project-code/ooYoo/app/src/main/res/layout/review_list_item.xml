<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/earth"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/review_user_image_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/review_user_image_view"
        android:text="Username"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/username_of_reviewer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/review_user_image_view"
        android:text="Review text"
        android:layout_below="@id/username_of_reviewer"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/review_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/review_user_image_view"
        android:layout_below="@id/review_text"
        android:text="Rating"
        android:id="@+id/rating_text_view"/>




</RelativeLayout>